<?xml version="1.0"?>
    <data inherit_id="account_check_writing.report_check"> 
        <xpath expr="//div[@class='page']" position="replace">
            <div class="page" style="margin-top:-16px;">
                <table class="col-xs-12 text-center mb32">
                <tr>
                    <td class="col-xs-10" colspan="2"></td>
                    <td class="col-xs-2" style="padding-left: 1.4cm;">
                        <div class="col-xs-12 mb16" style="margin-left:25px;"><span style="white-space:nowrap;" t-field="o.date"/></div>
                    </td>
                </tr>
                </table>
                <div class="row mt64 mb64">
                    <table class="col-xs-12">
                        <tr height="35">
                            <td class="col-xs-1"/>
                            <td class="col-xs-9text-left">
                                <span t-field="o.partner_id.name"/>
                            </td>
                            <td class="col-xs-2"  style="padding-left: 1.6cm;">
                                <span t-field="o.amount"/>
                            </td>
                        </tr> 
                        <tr height="40">
                            <td colspan="2" class="text-left">
                                <div style="padding-left:15px;"><span t-field="o.amount_in_word"/></div>
                            </td> 
                            <td colspan="2" style="padding-left:15px;"/>
                        </tr>
                    </table>
                </div>
                <div class="row mt64 mb64">
                    <div class="col-xs-12">
                        <span class="col-xs-5 mt16" style="margin-left:20px;"><span t-field="o.name"/></span>
                        <span class="col-xs-6 col-xs-offset-1 text-center"/>
                    </div>
                </div>
<br></br>
                <div class="row mt128">
                    <div class="col-xs-12 mb32">
                        <span class="col-xs-7"><span t-field="o.partner_id.name"/></span>
                        <span class="col-xs-2"><span t-field="o.date"/></span>
                        <span class="col-xs-3"/>
                    </div>
                    <div class="col-xs-12 mb64">
                        <table class="col-xs-12">
                            <tr>
                               <td class="col-xs-2" style="white-space:nowrap;"><strong>Invoice Number</strong></td>
                               <td class="col-xs-2 text-center" style="white-space:nowrap;"><strong>Invoice Date</strong></td>
                               <td class="col-xs-6" style="white-space:nowrap;"><strong>Description</strong></td>
                               <td class="col-xs-2" style="white-space:nowrap;"><strong>Amount</strong></td>
                            </tr>
                            <tr t-foreach="o.line_dr_ids" t-as="line">
                                <td class="col-xs-2"><span t-field="line.move_line_id.name"/></td>
                                <td class="col-xs-2 text-center"><span t-field="line.date_original"/></td>
                                <td class="col-xs-6"><span t-field="line.account_id.name"/></td>
                                <td class="col-xs-2"><span t-field="line.amount"/></td>
                            </tr>
                        </table>
                    </div>
                    <div class="col-xs-12 text-center">*** TOTAL THIS CHECK =  <span t-field="o.amount" t-field-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: &quot;o.currency_id&quot;}"/> ***</div>
                </div>
<br></br><br></br>
                <div class="row mt128">
                    <div class="col-xs-12 mb32">
                        <span class="col-xs-7"><span t-field="o.partner_id.name"/></span>
                        <span class="col-xs-2"><span t-field="o.date"/></span>
                        <span class="col-xs-3"/>
                    </div>
                    <div class="col-xs-12 mb64">
                        <table class="col-xs-12">
                            <tr>
                               <td class="col-xs-2" style="white-space:nowrap;"><strong>Invoice Number</strong></td>
                               <td class="col-xs-2 text-center" style="white-space:nowrap;"><strong>Invoice Date</strong></td>
                               <td class="col-xs-6" style="white-space:nowrap;"><strong>Description</strong></td>
                               <td class="col-xs-2" style="white-space:nowrap;"><strong>Amount</strong></td>
                            </tr>
                            <tr t-foreach="o.line_dr_ids" t-as="line">
                                <td class="col-xs-2"><span t-field="line.move_line_id.name"/></td>
                                <td class="col-xs-2 text-center"><span t-field="line.date_original"/></td>
                                <td class="col-xs-6"><span t-field="line.account_id.name"/></td>
                                <td class="col-xs-2"><span t-field="line.amount"/></td>
                            </tr>
                        </table>
                    </div>
                    <div class="col-xs-12 text-center">*** TOTAL THIS CHECK =  <span t-field="o.amount" t-field-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: &quot;o.currency_id&quot;}"/> ***</div>
                </div>
            </div>

        </xpath>
    </data>
